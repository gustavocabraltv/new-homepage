 <!-- Popup de vídeo replicado do main-product -->
 <div class="video-popup-overlay" id="cards-video-popup">
  <div class="video-popup-container">
  <button class="custom-btn-close">
  <svg viewBox="0 0 24 24">
  <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
  </svg>
  </button>
  <video controls autoplay>
  <source src="" type="video/mp4">
  </video>
  </div>
 </div>
 
 <script>
 document.addEventListener('DOMContentLoaded', function() {
  // URL do vídeo
  const videoUrl = "{{ 'promo-video.mp4' | asset_url }}";
  
  // Criar o overlay do popup (mesmo sistema do main-product)
  const overlay = document.getElementById('cards-video-popup');
  
  // Adicionar click no elemento com data-video
  const videoDiv = document.querySelector('#video-von[data-video]');
  
  if (videoDiv && overlay) {
  videoDiv.addEventListener('click', function(e) {
  // Prevenir que clique no botão "Learn More" abra o vídeo
  if (e.target.closest('a')) {
  return;
  }
  
  const video = overlay.querySelector('video source');
  const videoElement = overlay.querySelector('video');
  
  video.src = videoUrl;
  videoElement.load();
  overlay.classList.add('active');
  document.body.style.overflow = 'hidden';
  });
  }
  
  // Fechar popup
  function closePopup() {
  overlay.classList.remove('active');
  document.body.style.overflow = '';
  const video = overlay.querySelector('video');
  video.pause();
  video.currentTime = 0;
  }
  
  // Event listeners para fechar
  if (overlay) {
  overlay.querySelector('.custom-btn-close').addEventListener('click', closePopup);
  overlay.addEventListener('click', function(e) {
  if (e.target === overlay) {
  closePopup();
  }
  });
  }
 });
 </script>
 
