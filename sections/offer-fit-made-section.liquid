<style>
  .offer-fit-made-section{
    padding: 30px 0 130px;
  }
  .offer-fit-made-section .section-wrapper {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 5px;
  }
  .offer-fit-made-section .top-text {
      font-size: 20px;
      color: #000;
  }
  .offer-fit-made-section .card-box {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
    padding: 30px 30px;
    background: #fff;
    border-radius: 10px;
    }
    .offer-fit-made-section .block-wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 28px;
        padding-top: 40px;
    }
    .offer-fit-made-section img.block-image {
        margin-bottom: 25px;
    }
    .offer-fit-made-section h4.block-heading {
        font-size: 21px;
        font-weight: 700;
        letter-spacing: 0;
        max-width: 185px;
        color: #112038;
        line-height: 120%;
    }
    .offer-fit-made-section p.block-textarea {
        color: #5F6F89;
        line-height: 140%;
        font-size: 16px;
        max-width: 300px;
        font-weight: 400;
        letter-spacing: 0;
    }
    @media(max-width: 989px){
        .offer-fit-made-section .block-wrapper {
            display: grid;
            grid-template-columns: 1fr;
            gap: 28px;
            padding-top: 40px;
        }
        .offer-fit-made-section .top-text {
          font-size: 16px;
        }
        .offer-fit-made-section .card-box{
          align-items: center;
          text-align: center;
          box-shadow: 3px 3px 18px 0px #00000042;
        }
        .offer-fit-made-section{
          padding: 30px 0 60px;
        }
    }
</style>

<section class="offer-fit-made-section">
  <div class="page-width">
    <div class="inner-container">
      <div class="section-wrapper">
        <h4 class="top-text tw-text-[#5F6F89] tw-mb-[8px]">{{ section.settings['top-text'] }}</h4>
        <h2 class="main-heading tw-font-bold tw-text-[32px] tw-text-center lg:tw-text-[48px] tw-leading-none">
          {{ section.settings.heading }}
        </h2>
      </div>
      <div class="block-wrapper">
        {% for block in section.blocks %}
          <div class="card-box">
            <img class="block-image" src="{{ block.settings.image | img_url:'' }}" width="40" height="40">
            <h4 class="block-heading">{{ block.settings.heading }}</h4>
            <p class="block-textarea">{{ block.settings.textarea }}</p>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Offer Fit Made Section",
  "settings": [
    {
      "type": "text",
      "id": "top-text",
      "label": "Top Text"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "heading"
        },
        {
          "type": "textarea",
          "id": "textarea",
          "label": "Textarea"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Offer Fit Made Section"
    }
  ]
}
{% endschema %}
