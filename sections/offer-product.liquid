<style>
  .offer-product{
      padding: 30px 0;
  }
  .offer-product .inner-container{
    display: flex;
    align-items: flex-start;
  }
  .offer-product .media-wrapper {
    width: 55%;
  }
  .offer-product .offer-info-wrapper {
    width: 45%;
  }
  .offer-product .product-form__submit{
      font-weight: 600;
      align-items: center;
      gap: 5px;
      font-size: 20px;
      min-height: 60px;
      background: #11A5FB;
      color: #000;
  }
  .offer-product .product-form__submit.button:after{
      content: none;
  }
  .offer-product #ATC{
      max-width: 100%;
      padding-top: 20px;
  }
  .offer-product .price-wrapper {
      display: flex;
      align-items: center;
      gap: 9px;
  }
  .pdp-mobile-block{
    display: none;
  }
  .icon-grid-main-wrapper span{
    color: #000;
    font-weight: 600;
  }
  .offer-product .custom-atc-offer-btn {
    font-weight: 600;
    gap: 5px;
    font-size: 20px;
    min-height: 60px;
    background: #000;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50px;
    width: 40%;
    margin: 0 auto;
  }
  .offer-product a.order-now-button {
    font-weight: 600;
    gap: 5px;
    font-size: 20px;
    min-height: 60px;
    background: #11A5FB;
    color: #000;
    border-radius: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .offer_product_button_wrapper {
    margin-top: 80px;
    display: block;
  }
  .offer-product div#benefits-icons {
    margin-top: 30px;
  }
  {% if template contains 'offer' %}
  /* offer paeg CSS starts */
    body {
      background-color: #F2F5FA !important;
    }
    body.body-locked {
      overflow: hidden !important;
    }
  /* offer paeg CSS ends */
  {% endif %}

  a.custom-atc-offer.sticky_ATC_Btn {
    width: max-content;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #28B0FF;
    color: #000;
    padding: 10px 30px;
    font-weight: 700;
    font-size: 18px;
    letter-spacing: 0;
    position: fixed;
    bottom: 15px;
    left: 15px;
    z-index: 5;
    border-radius: 100px;
    gap: 5px;
    box-shadow: 0px 5px 5px 0px #7b7b7b;
  }
  a.custom-atc-offer.sticky_ATC_Btn svg {
    margin-top: -2px;
  }
  @media(max-width: 1022px){
    .offer-product .inner-container{
      flex-direction: column;
    }
    .offer-product div#benefits-icons {
      margin-top: 10px;
    }
    .offer-product .media-wrapper {
      width: 100%;
    }
    .offer-product .offer-info-wrapper {
      width: 100%;
      padding: 0 15px;
    }
    .pdp-mobile-block{
      display: block;
    }
    .offer-product .inner-container{
      padding: 0;
      background: #fff;
      padding-bottom: 30px;
    }
    .offer-product {
      padding: 58px 0 30px;
    }
    .icon-grid-block-wrapper{
      margin-top: 30px;
      row-gap: 40px;
    }
    .icon-grid-heading{
      margin-top: 30px;
      max-width: 360px;
      font-weight: 700;
    }
    .icon-grid-main-wrapper span{
      font-weight: 400;
    }
    .icon-grid-main-wrapper{
      padding: 0 15px;
    }
    .offer-product .page-width.first{
      padding: 0;
    }
    .offer_product_button_wrapper {
      display: none;
    }
    .pdp-mobile-block.padd {
      border-bottom: 1px solid #D5D5D5;
      padding-bottom: 30px;
      margin-bottom: 10px;
      padding-top: 22px;
    }
    .mobile-payment-icon{
      max-width: 180px;
    }
    .offer_product_button_wrapper {
      display: none;
    }
    .offer-product div#benefits-icons {
      margin-top: 20px;
    }
    {% if template contains 'offer' %}
      /* offer paeg CSS starts */
        body sticky-header a.btn.groov_btn {
          display: none;
        }
        .header_action_wrapper {
          margin-left: unset;
        }
        .header__heading, .header__heading-link {
          margin: 0 auto;
        }
        .custom_header .header_action_wrapper {
          width: max-content;
        }
        svg.icon.icon-hamburger path {
            stroke: #000;
        }
      /* offer paeg CSS ends */
      {% endif %}
  }

  @media(max-width: 989px){
    a.custom-atc-offer.sticky_ATC_Btn {
      display: none !important;
    }
    a.custom-atc-offer.sticky_ATC_Btn.active {
      display: flex !important;
    }
  }
</style>

<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{% assign product = section.settings.product %}
<section class="offer-product" id="offer-product">
