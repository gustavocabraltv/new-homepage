            <h2 class="tw-mt-[8px] lg:tw-text-[32px] tw-text-[24px] tw-font-semibold">
              {% if template contains 'no-offer' %}
              {% elsif template contains 'female-offer' %}
                $139
                {% elsif template contains 'male-offer' or template contains 'male-banner-offer' %}
                  $139
                  {% elsif template contains 'mygolfspy-offer' %}
                    $134
                  {% elsif template contains 'nflpa-offer' %}
                    $99
                    {% elsif template contains 'julia-offer' %}
                      $129
              {% endif %}
            </h2>
            <h2
              class="tw-mt-[8px] lg:tw-text-[32px] tw-text-[24px] tw-font-semibold"
              {% if template contains 'no-offer' %}
                style="color: #11A5FB;"
              {% else %}
                style="color: #11A5FB; text-decoration: line-through;"
              {% endif %}
            >
              {{ product.price | money_without_trailing_zeros }}
            </h2>
          </div>
        </div>
        <div id="short-description" class="tw-flex tw-flex-col tw-gap-[8px]">
          <p class=" tw-text-black tw-font-semibold tw-text-[16px] lg:tw-text-[18px] ">
            {{ product.metafields.custom.groov_description }}
          </p>
          <p class="tw-font-regular tw-text-[#4D5056] tw-text-[16px] lg:tw-text-[16px]">
            {{ product.metafields.custom.groov_heading }}
          </p>
        </div>
        <div id="ATC" class="tw-flex tw-flex-col tw-gap-[14px]">
          {% if template contains 'no-offer' %}
            <a class="order-now-button custom-atc-offer lastBtn" href="#">Order Now</a>
          {% else %}
            <a class="order-now-button custom-atc-offer lastBtn" href="#">Order Now</a>
            {% comment %} {% if template contains 'male-offer' or template contains 'male-banner-offer' or template contains 'nflpa-offer' %}
            {% elsif template contains 'female-offer' %}
              <a class="order-now-button custom-atc-offer lastBtn" href="#">Order Now</a>
            {% elsif template contains 'mygolfspy-offer' %}
              <a class="order-now-button custom-atc-offer lastBtn" href="#">Order Now</a>
            {% elsif template contains 'julia-offer' %}
              <a class="order-now-button custom-atc-offer lastBtn" href="#">Order Now</a>
