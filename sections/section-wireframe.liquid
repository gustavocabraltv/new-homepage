      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 80px;
      height: 80px;
      z-index: 10001;
      cursor: pointer;
      display: none;
    }

    .custom-play-btn, .custom-pause-btn {
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
      transition: opacity 0.3s ease;
    }

    .custom-play-btn {
      opacity: 1;
    }

    .custom-pause-btn {
      opacity: 0;
    }

    /* Mostrar controles apenas no desktop */
    @media screen and (min-width: 481px) {
      #modalVideo {
        cursor: pointer;
      }

      .custom-video-controls {
        display: block;
      }

      .custom-video-controls.playing .custom-play-btn {
        opacity: 0;
      }

      .custom-video-controls.playing .custom-pause-btn {
        opacity: 1;
      }

      /* Faz os controles aparecerem ao passar o mouse sobre o vídeo */
      #modalVideo:hover + .custom-video-controls,
      .custom-video-controls:hover {
        opacity: 1;
      }
    }

    /* Video Modal Styles - ADAPTATIVO */
    .video-modal {
      display: none;
      position: fixed;
      z-index: 9999;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      background-color: rgba(0, 0, 0, 0.9);
    }


