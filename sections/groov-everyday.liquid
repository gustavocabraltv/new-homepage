<style>
  #slide-02-video {
    background-image: url('{{ "slide-02-video.png" | asset_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .everyday .swiper-pagination {
    bottom: 20px !important; /* Dist√¢ncia da parte inferior */
    position: absolute;
    width: 100%;
    text-align: center;
    z-index: 10;
  }

  .everyday .swiper-pagination-bullet {
    background: #fff;
    opacity: 0.6;
    width: 10px;
    height: 10px;
  }

  .everyday .swiper-pagination-bullet-active {
    background: #36A5FC;
    opacity: 1;
  }


  .slide-video {

  }



  .everyday  {
    width: 100%;
    height: 100%;
  }

  .swiperss {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .everyday .swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #F0F4FB;
    display: flex;
    justify-content: center;
    align-items: center;

    height: 320px;
  }

  .everyday .swiper-slide img {
    {% comment %} display: block;
    width: 100%;
    height: 100%;
    object-fit: cover; {% endcomment %}
  }
</style>

<div class="everyday section-{{ section.id }}-padding md:tw-py-[96px] tw-py-[48px] tw-tracking-normal">
  <div class="page-width">
    <!-- Slider main container -->

    <div id="slider-mobile" class="tw-flex tw-flex-col tw-justify-center tw-items-center tw-py-8 tw-gap-8 tw-hidden">
      <div class="tw-w-full tw-bg-[#F0F4FB] tw-overflow-hidden tw-rounded-2xl">
        <div class="swiperss mySwiper">
          <div class="swiper-wrapper">
            <div class="swiper-slide">
              <img src="{{ "slide-01-everyday.png" | asset_url }}" width="auto" height="auto">
            </div>
            <div class="swiper-slide">
              <img src="{{ "everyday-product-2.png" | asset_url }}" width="333" height="auto">
            </div>
            {% comment %} <div class="swiper-slide slide-video"><img src="{{ "play-rounded.svg" | asset_url }}" width="96" height="auto"></div> {% endcomment %}
            <div class="swiper-slide slide-video">
              <img src="{{ "slide-04-slim.png" | asset_url }}" width="500" height="auto">
            </div>
          </div>
          <div class="swiper-pagination"></div>
          <div class="swiper-button-next"></div>
          <div class="swiper-button-prev"></div>
        </div>
      </div>
      <button class="tw-bg-[#F0F4FB] tw-rounded-full tw-px-6 tw-py-4 tw-flex tw-items-center tw-gap-2">
        <img src="{{ "play-black.svg" | asset_url }}" width="28" height="auto">
        <span>WATCH VIDEO</span>
      </button>

      
    </div>

    
    <div class="tw-flex md:tw-flex-row tw-flex-col">
      <div id="left-content" class="tw-w-full  tw-gap-4 tw-flex-col tw-flex md:tw-pr-16 tw-pr-0 tw-pb-16">
        <div class="tw-bg-[#F0F4FB] tw-w-full tw-flex tw-h-[240px] tw-justify-center tw-items-center tw-flex tw-rounded-xl">
          <img src="{{ "everyday-product.png" | asset_url }}" width="461" height="auto">
        </div>
        <div class="tw-w-full tw-flex tw-h-[240px] tw-gap-4">
          <div
            id="slide-02-video"
            class="tw-w-full tw-bg-[#F0F4FB] tw-justify-center tw-items-center tw-flex tw-rounded-xl tw-cursor-pointer"
          >
            <img src="{{ "play-rounded.svg" | asset_url }}" width="60" height="auto">
          </div>
          <div class="tw-w-full tw-bg-[#F0F4FB] tw-justify-center tw-items-center tw-flex tw-rounded-xl">
            <img src="{{ "everyday-product-2.png" | asset_url }}" width="333" height="auto">
          </div>
        </div>
        <div class="tw-bg-[#F0F4FB] tw-w-full tw-flex tw-h-[140px] tw-justify-center tw-items-center tw-flex tw-rounded-xl">
          <img src="{{ "slide-04-slim.png" | asset_url }}" width="500" height="auto">
        </div>
      </div>
      <div id="right-content" class="tw-w-full tw-gap-[32px] tw-max-w-[490px]">
        <div class="tw-gap-[32px] tw-flex tw-flex-col">
          <div id="product-welcome" class="tw-flex tw-flex-col tw-gap-[16px]">
            <h1 class="md:tw-text-[40px] tw-text-[32px] tw-font-semibold tw-leading-none">
              The Everyday, by Groov - Custom Insoles
            </h1>
            <div id="reviews" class="tw-flex">
              <img src="{{ 'reviews-stars.svg' | asset_url }}" alt="hero" loading="lazy" width="80" height="auto">
              <p>(4.9)</p>
            </div>
            <div class="tw-flex tw-gap-[16px] tw-text-[32px]">
              <p class=" tw-font-normal tw-line-through tw-text-[#848991]">$139</p>
              <p class=" tw-font-semibold tw-text-[#36A5FC]">$139</p>
            </div>
          </div>
          <div id="product-description" class="tw-flex tw-flex-col tw-gap-[8px] tw-tracking-normal">
            <div id="info-title" class="tw-font-semibold tw-text-[#0B0C0E]">Plush. Cushy. A Hug for Your Feet</div>
            <div id="info-description" class="tw-text-[#4D5056]">
              Meet your new favorite product. Your custom pair of The Everyday, by Groov is made with our softest memory
              foam cushioning to make you feel like you're walking on a cloud
            </div>
          </div>

          <div class=" tw-flex-col tw-flex tw-gap-[16px]">
            <button class="tw-bg-[#36A5FC] tw-text-white tw-py-[12px] tw-rounded-full tw-w-full tw-font-semibold">
              Order Now
            </button>

            <div
              id="secure-checkout"
              class="tw-flex tw-items-center tw-justify-center tw-gap-[8px] tw-text-[#505C72] tw-text-[12px] lg:tw-text-[14px]"
            >
              <img src="{{ "secure-18.svg" | asset_url }}" width="18" height="auto">
              Secure Checkout
              <img
                src="{{ "payments.svg" | asset_url }}"
                width="auto"
                height="20"
                class="lg:tw-ml-[18px] tw-ml-[2px]"
              >
            </div>
          </div>

          <div id="benefits-icons" class="tw-flex tw-flex-col tw-gap-[16px]">
            <div class="tw-flex tw-flex-row tw-gap-[12px]">
              <img src="{{ "free-shipping-icon.svg"| asset_url }}" width="24" height="24">

              <div class="tw-flex tw-flex-col">
                <span class="tw-text-[#1D1D1F] tw-font-semibold tw-text-[14px] tw-leading-tight"
                  >Free Shipping Worldwide</span
                >
                <span class="tw-text-[#4A526F] tw-text-[13px] tw-leading-tight">Estimated dispatch within 7 days</span>
              </div>
            </div>

            <hr class="tw-border-[#D5D5D5] tw-border-t-[1px] tw-m-0">

            <div class="tw-flex tw-flex-row tw-gap-[12px]">
              <img src="{{ "signature-icon.svg"| asset_url }}" width="24" height="24">

              <div class="tw-flex tw-flex-col">
                <span class="tw-text-[#1D1D1F] tw-font-semibold tw-text-[14px] tw-leading-tight"
                  >Fast & Easy Personalization</span
                >
                <span class="tw-text-[#4A526F] tw-text-[13px] tw-leading-tight">Free name engraving included</span>
              </div>
            </div>

            <hr class="tw-border-[#D5D5D5] tw-border-t-[1px] tw-m-0">

            <div class="tw-flex tw-flex-row tw-gap-[12px]">
              <img src="{{ "shapesense-icon.svg"| asset_url }}" width="24" height="24">

              <div class="tw-flex tw-flex-col">
                <span class="tw-text-[#1D1D1F] tw-font-semibold tw-text-[14px] tw-leading-tight"
                  >ShapeSense By Groov</span
                >
                <span class="tw-text-[#4A526F] tw-text-[13px] tw-leading-tight"
                  >Custom-fit precision with 3D mapping</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Everyday",
  "tag": "section",
  "class": "section",
  "blocks": [],
  "presets": [
    {
      "name": "Everyday",
      "blocks": []
    }
  ]
}
{% endschema %}

{% javascript %}
  document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.everyday .mySwiper', {
      navigation: {
        nextEl: '.everyday .swiper-button-next',
        prevEl: '.everyday .swiper-button-prev',
      },

      pagination: {
        el: '.everyday .swiper-pagination',
        clickable: true,
      },
    });
  });
{% endjavascript %}
