  <script>
    function toggleFaq(button) {
      const content = button.nextElementSibling;
      const icon = button.querySelector('.faq-icon');
      const isOpen = !content.classList.contains('tw-hidden');
  
      if (isOpen) {
        content.classList.add('tw-hidden');
        icon.textContent = '+';
      } else {
        content.classList.remove('tw-hidden');
        icon.textContent = '–';
      }
    }
  
    function switchTab(tabId) {
      const tabs = ['about', 'orders'];
  
      tabs.forEach((id) => {
        const tabBtn = document.getElementById('tab-' + id);
        const faqSection = document.getElementById('faq-' + id);
  
        if (id === tabId) {
          tabBtn.classList.add('tw-bg-white', 'tw-border-gray-300', 'tw-shadow-sm');
          tabBtn.classList.remove('tw-border-transparent');
          faqSection.classList.remove('tw-hidden');
        } else {
          tabBtn.classList.remove('tw-bg-white', 'tw-border-gray-300', 'tw-shadow-sm');
          tabBtn.classList.add('tw-border-transparent');
          faqSection.classList.add('tw-hidden');
        }
      });
    }
  </script>
  