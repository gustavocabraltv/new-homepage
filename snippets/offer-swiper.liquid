      id="btn360"
      class="tab-button tw-flex tw-items-center tw-gap-3 tw-px-6 tw-py-2 tw-rounded-full tw-text-[14px] tw-font-medium tab-active"
    >
      <!-- Ícone 360° -->

      <img src="{{  "360-icon.svg" | asset_url }}" width="21" height="auto">
