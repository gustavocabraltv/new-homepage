    </button>

    <!-- Botão Photos -->
    <button
      id="btnPhotos"
      class="tab-button tw-flex tw-items-center tw-gap-3 tw-px-6 tw-py-2 tw-rounded-full tw-text-[14px] tw-font-medium tab-inactive"
    >
      <!-- Ícone Photos -->

      <img src="{{  "photos-icon.svg" | asset_url }}" width="21" height="auto">
