      <div class="video-wrapper">
        <div class="video-box">
          <img
            class="pause-image"
            src="https://cdn.shopify.com/s/files/1/0716/2606/4183/files/iconoir_play-solid.png?v=1757596481"
          >
          {% if page.handle contains 'female' %}
