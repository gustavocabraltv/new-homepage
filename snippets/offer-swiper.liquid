<style>
    .gallery-swipper {
      /* Classe vazia, apenas para marcação do Swiper */
    }

    .thumb-active {
      border-color: #000 !important;
      border-width: 2px !important;
    }
    .gallery-swipper .swiper-slide {
      background: #fff;
      border-radius: 10px;
  }

    .thumb {
      transition: all 0.2s ease;
      border: 1px solid #D0D5DE;
    }

    .swiper-button-next {
      margin-right: 32px;
      width: fit-content!important;
    }
    .swiper-button-prev {
      margin-left: 32px;
      width: fit-content!important;
    }

    .swiper-button-next::after,
    .swiper-button-prev::after {
      display: none;
    }

    .swiper-button-next,
    .swiper-button-prev {
        {% comment %} display: none!important; {% endcomment %}
        {% comment %} display: flex!important; {% endcomment %}
    }

    /* Estilos para os tabs */
    .tab-button {
      transition: all 0.2s ease;
    }

    .tab-active {
      background-color: #000 !important;
      color: #fff !important;
    }

    .tab-active img {
      filter: brightness(0) invert(1);
    }

    .tab-inactive {
      background-color: transparent;
      color: #6b7280;
    }

    .tab-inactive:hover {
      background-color: #f9fafb;
    }
    .swiper-wrapper .mainimage{
      max-height: 170px;
    }
    .video-wrapper .pause-image {
      max-width: 90px;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 2;
      cursor: pointer;
    }
    .video-wrapper .video-box{
      position: relative;
    }
    .video-wrapper {
        margin-bottom: 20px;
    }
    .video-wrapper video{
      width: 100%;
      object-fit: cover;
      border-radius: 16px;
      height: 350px;
      object-position: center;
    }
    .offer-slider-image-box{
      margin-bottom: 20px;
    }
    .offer-slider-image-box img {
      max-height: 350px;
      object-fit: contain;
    }
    {% comment %} .common-hide[imageName="2"]{
      display: none;
    } {% endcomment %}
    @media(max-width: 1022px){
      .video-wrapper.top{
        display: none;
      }
      .videoBotton{
        display: flex !important;
      }
      .offer-slider-image-box{
        display: none !important;
      }
      .video-wrapper video {
        border-radius: 0px;
        height: 300px;
      }
      .video-wrapper {
        margin-bottom: 0;
      }
      .video-wrapper .pause-image {
        max-width: 60px;
      }
    }
</style>

